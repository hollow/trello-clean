{
  "name": "Trello Clean",
  "description": "A Chrome extension to provide a cleaner Trello experience",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "host_permissions": ["*://trello.com/*"],
  "content_scripts": [
    {
      "matches": ["https://trello.com/*"],
      "run_at": "document_start",
      "css": ["style.css"],
      "js": ["script.js"]
    }
  ]
}
